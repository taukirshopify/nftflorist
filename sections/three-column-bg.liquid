<section class="full-width-box">
  <div class="container-fluid">
    <div class="row">
      <div class="col-third">
        <div class="bg_content">
          <img src="{{ section.settings.fimage_box | img_url: 'master' }}" class="img-fluid">
          <h3 class="fade-in-text">{{ section.settings.f_content_heading }}</h3>
        </div>
      </div>
       <div class="col-third">
         <div class="bg_content">
            <img src="{{ section.settings.simage_box | img_url: 'master' }}" class="img-fluid">
            <h3 class="fade-in-text">{{ section.settings.s_content_heading }}</h3>
         </div>
      </div>
       <div class="col-third">
         <div class="bg_content">
            <img src="{{ section.settings.timage_box | img_url: 'master' }}" class="img-fluid">
            <h3 class="fade-in-text">{{ section.settings.t_content_heading }}</h3>
         </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Three Column BG Image",
    "settings": [
       {
          "type": "image_picker",
          "id": "fimage_box",
          "label": "First Box Image Upload "
        },
       {
          "type": "image_picker",
          "id": "simage_box",
          "label": "Second Box Image Upload "
        },
       {
          "type": "image_picker",
          "id": "timage_box",
          "label": "Third Box Image Upload "
        },
      {
          "type": "textarea",
          "id": "f_content_heading",
          "label": "First Box Title"
        },
      {
          "type": "text",
          "id": "s_content_heading",
          "label": "Second Box Title"
        },
      {
          "type": "text",
          "id": "t_content_heading",
          "label": "Third Box Title"
        }
    ],
    "presets": [
    {
      "name": "Third Column BG Image"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
  .full-width-box {
    max-width: 100%;
    margin: 0 auto;
}
  .img-fluid {
    max-width: 100%;
    display: block;
    vertical-align: middle;
}

  .col-half {
    max-width: 50%;
    width: 100%;
    flex: 0 0 50%;
}

  .col-third {
    max-width: 33.33%;
    width: 100%;
    flex: 0 0 33.33%;
}
  
.row {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
}
   .bg_content {
    position: relative;
}

  .bg_content h3 {
    position: absolute;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 700;
    font-size: 40px;
    line-height: 48px;
    text-align: center;
    color: #2E2E2E;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    margin: 0;
    width: 100%;
    max-width: 600px;
}
  .bg_content img {
    width: 100%;
    max-height: 315px;
    object-fit: cover;
}
{% endstylesheet %}

