<section class="full-width-image">
  {% if section.settings.section_title %}<div class="text-content" style="margin-top: 40px;"><h3 class="center">{{ section.settings.section_title }}</h3></div>{% endif %}
  <div class="container-fluid padding-reset">
    <div class="row p-0">
        <div class="image-box">
          <img src="{{ section.settings.image_box_full | img_url: 'master' }}" class="img-fluid">
        </div>
    </div>

  </div>
</section>
{% schema %}
  {
    "name": "Image Box",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_box_full",
        "label": "Upload Image"
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Add a title"
      }
    ],
    "presets": [
    {
      "name": "Image Box"
    }
  ]
  }
{% endschema %}

{% stylesheet %}

.image-box {
    padding: 0 1.5rem;
}
  .full-width-image {
    max-width: 100%;
    margin: 0 auto;
}
  img.img-fluid {
    max-width: 100%;
width: 100%;
    display: block;
    vertical-align: middle;
}
{% endstylesheet %}

